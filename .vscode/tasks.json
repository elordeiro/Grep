{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Echo Input",
            "type": "shell",
            "command": "cd cmd/mygrep && echo -n 'apple' | dlv debug --headless --listen=:2345 --api-version=2 --accept-multiclient -- -E \"\\d\"",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Kill Process",
            "type": "shell",
            "command": "kill -9 $(lsof -t -i:2345)",
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}
